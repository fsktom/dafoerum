{
  // https://github.com/bram209/leptosfmt#configure-ra
  "rust-analyzer.rustfmt.overrideCommand": [
    "leptosfmt",
    "--stdin",
    "--rustfmt"
  ],
  // https://book.leptos.dev/getting_started/leptos_dx.html
  "rust-analyzer.cargo.features": ["ssr, hydrate"],
  // https://github.com/tailwindlabs/tailwindcss-intellisense/issues/546#issuecomment-1121102708
  "tailwindCSS.includeLanguages": {
    "rust": "html"
  },
  // https://github.com/tailwindlabs/tailwindcss-intellisense#editorquicksuggestions
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.tabSize": 4
}
